{
  "extends": "../tsconfig.base.json", // Наследуем базовый файл
  "compilerOptions": {
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Добавляем типы браузера
    "module": "ESNext", // Фронтенд обычно использует ES-модули для бандлера
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "include": ["src"] // Компилируем только файлы в папке src
}
