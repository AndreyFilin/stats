generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model events {
  id         Int       @id @default(autoincrement())
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

model transaction_categories {
  id       String @id @default(dbgenerated("uuid_generate_v4()")) @db.VarChar(36)
  title    String @db.VarChar(80)
  sys_name String @db.VarChar(80)
}

model transactions {
  id         Int       @id @default(autoincrement())
  created_at DateTime? @default(now()) @db.Timestamp(6)
  title      String    @db.VarChar(80)
  value      Float
  category   String    @db.VarChar(36)
}

model users {
  id               String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  login            String    @unique(map: "unique_login") @db.VarChar(30)
  password         String    @db.VarChar(32)
  token            String?   @db.VarChar(36)
  token_created_at DateTime? @default(now()) @db.Timestamp(6)
  role             String?   @default("user") @db.VarChar(26)
}
